# BIST AI Trading System - Environment Variables Template
# Copy this file to .env and fill in your actual values
# DO NOT commit .env to version control!

# =============================================================================
# Macroeconomic Data APIs
# =============================================================================

# FRED API (Federal Reserve Economic Data)
# Get your free API key from: https://fred.stlouisfed.org/docs/api/api_key.html
FRED_API_KEY=your_fred_api_key_here

# EVDS API (CBRT Electronic Data Delivery System - Turkish Central Bank)
# Register and get your API key from: https://evds2.tcmb.gov.tr/
EVDS_API_KEY=your_evds_api_key_here

# =============================================================================
# Database Configuration
# =============================================================================

# PostgreSQL
DB_HOST=localhost
DB_PORT=5432
DB_NAME=bistml
DB_USER=bistml_user
DB_PASSWORD=your_db_password_here

# Redis Cache
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=

# =============================================================================
# News and NLP APIs
# =============================================================================

# News API (if using external news service)
NEWS_API_KEY=your_news_api_key_here

# OpenAI API (for LLM integration)
OPENAI_API_KEY=your_openai_api_key_here

# =============================================================================
# BIST Data Sources
# =============================================================================

# BIST Data Provider credentials (if applicable)
BIST_API_KEY=
BIST_USERNAME=
BIST_PASSWORD=

# =============================================================================
# Application Settings
# =============================================================================

# Environment (development, staging, production)
ENVIRONMENT=development

# Logging Level (DEBUG, INFO, WARNING, ERROR, CRITICAL)
LOG_LEVEL=INFO

# Data directories
DATA_DIR=/home/user/BISTML/data
LOG_DIR=/home/user/BISTML/logs
MODEL_DIR=/home/user/BISTML/models

# =============================================================================
# Trading Configuration
# =============================================================================

# Signal generation frequency (in minutes)
SIGNAL_FREQUENCY=30

# Backtesting
BACKTEST_START_DATE=2020-01-01
BACKTEST_END_DATE=2024-01-01

# Risk Management
MAX_POSITION_SIZE=0.1  # 10% of portfolio per position
MAX_PORTFOLIO_RISK=0.02  # 2% max drawdown

# =============================================================================
# Optional Services
# =============================================================================

# Email notifications
SMTP_HOST=
SMTP_PORT=587
SMTP_USER=
SMTP_PASSWORD=
NOTIFICATION_EMAIL=

# Telegram Bot (for alerts)
TELEGRAM_BOT_TOKEN=
TELEGRAM_CHAT_ID=

# =============================================================================
# Notes
# =============================================================================
#
# After filling in your values:
# 1. Rename this file to .env
# 2. Make sure .env is in .gitignore
# 3. Load with: python-dotenv or export $(cat .env | xargs)
#
